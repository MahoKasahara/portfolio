<section>
  <div class="container">
    
     <% @posts.each do |post| %>
        <div class="feed_post">
     
          <div>
            <figure>
             <%= link_to post_path(post) do %>
              <%= attachment_image_tag post, :image, class: "feed_photo" %>
             <% end %>
            </figure>
          </div>
          
           
                <div>
                  <figure class="image_area">
                   <%= link_to user_path(post.user.id) do %>
                    <%= attachment_image_tag post.user, :profile_image, fallback: "default.png", class: "feed_userimg" %>
                   <% end %>
                  </figure>
                  </div>
                  
                  <div class="feed_username">
                      <%= link_to post.user.username, user_path(post.user), class: "nm" %>
                  </div>
                
                
                
                 <div class="feed_right">
                  <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>
                 </div>
                
            </div>
          <% end %>
         
      </div>
   </section>