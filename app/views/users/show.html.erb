
    <div class="user_profile_field">       
            <figure class="image__field">
             <%= attachment_image_tag @user, :profile_image, fallback: "default.png", class: "profile_img usershowimg" %>
            </figure>
          
                <div class="name_field">
                  <strong><%= @user.username %></strong>
                </div>
                
                <div class="profile_field">
                   <%= @user.profile %>
                </div>
                
                <% if @user.id == current_user.id %>
              
                <div class="edit_btn_field">
                    <%= link_to "編集", edit_user_path(@user), class: "user_edit_button" %>
                </div>
                <% end %>
              
        <hr class="priod"></hr>            
    </div>

            
          

<section class="section">
  
 <div class="position">  
    
      <% @user.posts.each do |post| %>
        <div class="post_card">
            
              <figure class="posted_photo">
                <%= link_to post_path(post) do %>  
                 <%= attachment_image_tag post, :image, class: "photo_image" %>
                <% end %>
              </figure>
              
              <div class="content">
              <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>
              </div>
              
            
        
                
          
          <div class="current_user_only">      
          <% if @user.id == current_user.id %>
                  
                  
               <%= link_to edit_post_path(post), class: "panel-block" do %>
                  <span class="panel-icon">
                        <i class="fas fa-edit"></i>
                  </span>
               <% end %>
  
              
               <%= link_to post_path(post), method: :delete, deta: {confirm: "削除しますか？"}, class: "panel-block" do %>
                 <span class="panel-icon">
                        <i class="fas fa-trash"></i>
                 </span>
               <% end %>

          <% end %>
          </div>
          
          　<div class="for_show_page">
              <%= link_to post_path(post) do %>
                  <button class="btn_imgg">投稿を見る</button>
              <% end %>
            </div>
          
            
        </div>
      <% end %>
      
       </div>
      
</section>
    
 
