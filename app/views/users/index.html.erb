
<div class="user_cards">
    
        <% @users.each do |user| %>
        <div class="card">
            <div class="userimg">
                <%= link_to user_path(user) do %>
                 <%= attachment_image_tag user, :profile_image, fallback: "default.png", width: "135", height: "135", class: "user_img" %>
                <% end %>
            </div>
         
            <div class="username">
                 <%= link_to user.username, user_path(user), class: "user_name" %>
            </div>
            
            <div>
            <%= link_to user_path(user) do %>
                <button class="for_user_btn">プロフィールを見る</button>
            <% end %>
            </div>
            
         </div>
        <% end %>
           
</div>  
      